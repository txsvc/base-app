<% content_for :page_title, formatted_title('Login') %>

<h2 class="ui image header">
    <%= link_to image_tag('logo.png'), root_path, class: 'image' %>
    <div class="content">Login to your account</div>
</h2>

<%= dismissable_flash %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f| %>

<div class='ui segment'>

    <div class='field'>
        <div class='ui left icon input'>
            <i class='user icon'></i>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'E-mail address' %>
        </div>
    </div>

    <div class='field'>
        <div class='ui left icon input'>
            <i class='lock icon'></i>
            <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password' %>
        </div>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="inline field">
        <div class="ui checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
    </div>
    <% end %>

    <div class='actions'>
        <%= f.submit 'Login', class: 'ui fluid large submit button' %>
    </div>

</div>

<% end %>

<%= render "accounts/shared/links" %>