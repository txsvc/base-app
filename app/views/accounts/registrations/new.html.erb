<% content_for :page_title, formatted_title('Register') %>

<h2 class="ui image header">
    <%= link_to image_tag('logo.png'), root_path, class: 'image' %>
    <div class="content">Register a new account</div>
</h2>

<%= render "accounts/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui form'}) do |f| %>

<div class="ui segment">

    <div class='field'>
        <div class='ui left icon input'>
            <i class='user icon'></i>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'E-mail address' %>
        </div>
    </div>

    <div class='field'>
        <div class='ui left icon input'>
            <i class='lock icon'></i>
            <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Select a password' %>
        </div>
    </div>

    <div class='field'>
        <div class='ui left icon input'>
            <i class='lock icon'></i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password' %>
        </div>
    </div>

    <div class='actions'>
        <%= f.submit 'Register', class: 'ui fluid large submit button' %>
    </div>

</div>

<% end %>

<%= render "accounts/shared/links" %>